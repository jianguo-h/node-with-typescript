{
  "name": "node-with-typescript",
  "version": "0.0.1",
  "description": "start node project with typescript",
  "main": "src/index.ts",
  "scripts": {
    "start": "env-cmd nodemon --ext ts --ignore node_modules --watch src --exec ts-node src/index.ts",
    "build": "./node_modules/.bin/tsc",
    "server": "env-cmd -f .env.prod node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jianguo-h/node-with-typescript.git"
  },
  "author": "jianguo-h",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jianguo-h/node-with-typescript/issues"
  },
  "homepage": "https://github.com/jianguo-h/node-with-typescript#readme",
  "dependencies": {
    "koa": "^2.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/koa": "^2.11.3",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
